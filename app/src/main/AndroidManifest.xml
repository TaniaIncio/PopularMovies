<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tincio.topratedmovies" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_movie"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".presentation.application.PopularMoviesApplication"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".presentation.activity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Declarate content provider-->
        <provider android:name=".data.model.PopularMoviesContentProvider"
            android:authorities="com.tincio.topratedmovies.contentproviders"/>
    </application>

</manifest>